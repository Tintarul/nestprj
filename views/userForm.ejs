<%- include('partials/header') %>

  <form class="w-full max-w-sm" method="POST" action="/user" >

    <div class="mb-4">
      <label for="username" class="block text-sm font-bold mb-2">Nume Utilizator</label>
      <input type="text" id="username" name="username" class="w-full px-3 py-2 border rounded-lg">
    </div>
    
    <div class="mb-4">
      <label for="email" class="block text-sm font-bold mb-2">Email</label>
      <input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded-lg">
    </div>

    <div class="mb-4">
      <label for="displayname" class="block text-sm font-bold mb-2">Nume Real</label>
      <input type="text" id="displayname" name="displayname" class="w-full px-3 py-2 border rounded-lg">
    </div>

    <div class="mb-4">
      <label for="phone" class="block text-sm font-bold mb-2">Telefon</label>
      <input type="number" id="phone" name="phone" class="w-full px-3 py-2 border rounded-lg">
    </div>

    <div class="mb-4">
      <label for="password" class="block text-sm font-bold mb-2">Parola</label>
      <input type="password" id="password" name="password" class="w-full px-3 py-2 border rounded-lg">
    </div>

    <div class="mb-6">
      <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-full hover:bg-blue-700">Trimite</button>
    </div>
  </form>

<%- include('partials/footer') %>